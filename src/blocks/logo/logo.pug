mixin logo(href, mods)

  //- Declaration:
    href  {string} - link
    mods  {string} - modifiers

  //- Use:
    +logo('/')
      img(src='img/logo.svg', alt='Logo', width='64', height='15')
    +logo(false, 'mod')
      img(src='img/logo.svg', alt='Logo', width='64', height='15')
  -
    // Modifiers
    var allMods = '';
    if (typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' s-logo--' + modsList[i].trim();
      }
    }

  a.s-logo(class=allMods, href=href)&attributes(attributes)
    block
